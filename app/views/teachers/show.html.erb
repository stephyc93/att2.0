<h1>Attendance</h1>
<h3>My Student Attendance</h3>
  <hr>
  <% @activities.each do |activity| %>
    <%= activity.name %>
    <table class="table">
      <tr>
        <th>Students</th>
        <th>Attendance</th>
      </tr>
      <tr>
      </tr>
      <% activity.students.each do |student| %>
        <tr>
          <td><%= student.name %></td>
          <td>
            <% if student.activities_students.first.attendance.first == 1 %>
              <span class="glyphicon glyphicon-ok" aria-hidden="true"></span>
            <% else %>
              <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
            <% end %>
          </td>
        </tr>
      <% end %>
    </table>
    <br>
  <% end %>
