<div class="container">
  <div class="row">
    <h1 class="page-header text-center">Activities</h1>
    <p align="right"><%= link_to new_activity_path, class: "btn btn-success" do %>
          <i class="glyphicon glyphicon-plus"></i>
        <% end %>
    </p>

    <table class="table table-hover">
      <tr>
        <th>Name</th>
        <th>Start Date</th>
        <th>End Date</th>
        <th>Permission Slip?</th>
        <th>View</th>
        <th>Edit</th>
        <th>Delete</th>
      </tr>
      <% @activities.each do |activity| %>
       <tr>
          <td>  <%= activity.name %> </td>
          <td>  <%= activity.start %> </td>
          <td>  <%= activity.end%> </td>
          <td>  <% if activity.permission_slip %>
                  <span class="glyphicon glyphicon-ok-sign" aria-hidden="true"></span>
                <% else %>
                  <span class="glyphicon glyphicon-remove-sign" aria-hidden="true"></span>
                <% end %>
          </td>
          
          <td>
            <%= link_to activity_path(activity), class: "btn btn-info" do %>
              <i class="glyphicon glyphicon-eye-open"></i>
            <% end %>
          </td>
          <td>
            <%= link_to edit_activity_path(activity), class: "btn btn-default" do %>
              <i class="glyphicon glyphicon-pencil"></i>
            <% end %>
          </td>
          <td>
            <%= link_to activity_path(activity), method: :delete, class: "btn btn-warning" do %>
              <i class="glyphicon glyphicon-trash"></i>
            <% end %>
          </td>
        </tr>
      <% end %>
    </table>

  </div>
</div>
