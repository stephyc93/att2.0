<div class="container">
  <div class="row">
    <h1 class="page-header text-center">Show Activity</h1>
    <div>
      <h3><%= @activity.name %></h3>
      <%= link_to "Choose Students", choose_students_path(@activity.id), :class => "btn btn-default" %>
      <%= link_to "Delete", activity_path(@activity.id), :class => "btn btn-danger", method: :delete %>
      <%= link_to "Edit", edit_activity_path(@activity.id), :class => "btn btn-info" %>
    </div>
    
    
  </div>
  <br>
</div>
