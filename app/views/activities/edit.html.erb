<div class="row top button">
  <div class="col-md-12">
    <label>Edit Activity</label>
    <%= form_for @activity do |f| %>
      <div class="form-group">
        <label for="name">Name</label>
        <%= f.text_field :name, class: 'form-control'  %>
      </div>
      <div class="form-group">
        <label for="start_time">Start Date and Time</label>
        <div class='input-group date' id='start_time'>
          <%= f.text_field :start, class: 'form-control' %>
          <span class="input-group-addon">
            <span class="glyphicon glyphicon-calendar"></span>
          </span>
        </div>
      </div>
      <div class="form-group">
        <label for="end_time">End Date and Time</label>
        <div class='input-group date' id='end_time'>
          <%= f.text_field :end, class: 'form-control' %>
          <span class="input-group-addon">
            <span class="glyphicon glyphicon-calendar"></span>
          </span>
        </div>
      </div>
      <div class="form-group">
        <label for="location">Location</label>
        <%= f.text_field :location, class: 'form-control'  %>
      </div>
      <div class="form-group">
        <label for="location">Description</label>
        <%= f.text_area :description, cols: 20, rows: 10, class: 'form-control'  %>
      </div>

      <div class="checkbox">
        <label>
          <input name="permission_slip" type="checkbox" value="1"> Permission Slip Required?
        </label>
      </div>
      <div>
        <%= f.submit('edit', class: 'btn btn-default') %>
      </div>
    <% end %>
    <script>
      $(function () {
        $('#start_time').datetimepicker();
        $('#end_time').datetimepicker();
      });
    </script>
  </div>
</div>
