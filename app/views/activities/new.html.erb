<div class="row">
  <div class="col-md-12">
    <%= form_tag("/activities", method: "post") do %>
      <label>Create a New Activity</label>
      <div class="form-group">
        <label for="activity_name">Activity Name</label>
        <input type="text" class="form-control" name="name" id="activity_name" placeholder="Super Fun Times">
      </div>
      <div class="form-group">
        <label for="start_time">Start Date and Time</label>
          <div class='input-group date' id='start_time'>
          <input type="text" class="form-control" name="start" id="start_time" placeholder="">
            <span class="input-group-addon">
              <span class="glyphicon glyphicon-calendar"></span>
            </span>
          </div>
      </div>
      <div class="form-group">
        <label for="end_time">End Date and Time</label>
          <div class='input-group date' id='end_time'>
          <input type="text" class="form-control" name="end" id="end_time" placeholder="">
            <span class="input-group-addon">
              <span class="glyphicon glyphicon-calendar"></span>
            </span>
          </div>
      </div>
      <div class="checkbox">
        <label>
          <input name="permission_slip" type="checkbox" value="1"> Permission Slip Required?
        </label>
      </div>
      <button type="submit" class="btn btn-default">Create Event</button>
    <% end %>
    <script>
      $(function () {
        $('#start_time').datetimepicker();
        $('#end_time').datetimepicker();
      });
    </script>
  </div>
</div>
