<div class="row">
  <div class="col-md-12">
    <label>Create Activity</label>
    <%= form_for :activity, url: activities_path do |f| %>
      <div class="form-group">
        <label for="name">Name</label>
       <!-- <div class="input-group"> -->
        <%= f.text_field :name, class: 'form-control'  %>
         <!-- <span class="input-group-addon">
           <span class="glyphicon glyphicon-calendar"></span>
         </span> -->
       <!-- </div> -->
         <!-- <label for="activity_name">Activity Name</label> -->
         <!-- <input type="text" class="form-control" name="name" id="activity_name" placeholder=""> -->
      </div>
      <div class="form-group">
        <label for="start_time">Start Date and Time</label>
        <div class='input-group date' id='start_time'>
          <%= f.text_field :start, class: 'form-control' %>
             <!-- <input type="text" class="form-control" name="start" id="" placeholder=""> -->
          <span class="input-group-addon">
            <span class="glyphicon glyphicon-calendar"></span>
          </span>
        </div>
      </div>
      <div class="form-group">
        <label for="end_time">End Date and Time</label>
        <div class='input-group date' id='end_time'>
          <%= f.text_field :end, class: 'form-control' %>
                   <!-- <input type="text" class="form-control" name="end" id="end_time" placeholder=""> -->
          <span class="input-group-addon">
            <span class="glyphicon glyphicon-calendar"></span>
          </span>
        </div>
      </div>
      <div class="checkbox">
        <label>
          <input name="permission_slip" type="checkbox" value="1"> Permission Slip Required?
        </label>
      </div>
      <div>
        <%= f.submit('Create', class: 'btn btn-default') %>
        <!-- <button type="submit" class="btn btn-default">Update</button> -->
      </div>
    <% end %>
    <script>
      $(function () {
        $('#start_time').datetimepicker();
        $('#end_time').datetimepicker();
      });
    </script>
  </div>
</div>

